{
  "name": "supernote",
  "version": "0.1.0",
  "description": "Supernote file-format support.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Tiemen/supernote.git"
  },
  "keywords": [
    "supernote",
    "typescript",
    "library"
  ],
  "author": "Tiemen Schuijbroek",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://gitlab.com/Tiemen/supernote/issues"
  },
  "homepage": "https://gitlab.com/Tiemen/supernote#readme",
  "devDependencies": {
    "@types/color": "^3.0.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "@types/sharp": "^0.30.5",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "^.+\\.test\\.ts$"
  },
  "dependencies": {
    "color": "^4.2.3",
    "fs-extra": "^10.1.0",
    "sharp": "^0.33.2"
  }
}
